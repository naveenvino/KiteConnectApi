{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.MSSqlServer"
        ],
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "MSSqlServer",
                "Args": {
                    "connectionString": "Server=(localdb)\\mssqllocaldb;Database=KiteConnectApiDb;Trusted_Connection=True;MultipleActiveResultSets=true",
                    "tableName": "Logs",
                    "autoCreateSqlTable": true
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ]
    },
    "AllowedHosts": "*",
    "UseSimulatedServices": true,
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=KiteConnectApiDb;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "KiteConnect": {
        "AccessToken": "YOUR_ACCESS_TOKEN_HERE"
    },
    "NiftyOptionStrategy": {
        "HedgeDistancePoints": 300,
        "InstrumentPrefix": "NIFTY",
        "Exchange": "NFO",
        "ProductType": "MIS",
        "OrderType": "MARKET",
        "Quantity": 50,
        "StopLossPercentage": 50.0,
        "TakeProfitPercentage": 80.0
    },
    "RiskParameters": {
        "MaxDailyLossPercentage": 0.01,
        "MaxPerTradeLossPercentage": 0.005,
        "MaxOpenPositions": 5,
        "TotalCapital": 100000.00
    },
    "Jwt": {
        "Enabled": false,
        "Key": "THIS_IS_A_VERY_STRONG_SECRET_KEY_AND_SHOULD_BE_KEPT_CONFIDENTIAL_AND_LONG_ENOUGH",
        "Issuer": "KiteConnectApi",
        "Audience": "KiteConnectApiUsers",
        "ExpireDays": 7
    },
    "Notification": {
        "Email": {
            "SmtpHost": "smtp.your-email.com",
            "SmtpPort": 587,
            "EnableSsl": true,
            "Username": "your-email@example.com",
            "Password": "your-email-password",
            "FromAddress": "your-email@example.com",
            "ToAddress": "recipient-email@example.com"
        }
    }
}
